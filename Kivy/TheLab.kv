<BoxLayoutExample>:
    # orientation: 'vertical'
    orientation: 'horizontal'
    Button:
        text: 'A'
        # size: '20dp', '100dp'
        size_hint: .5, .5
        width: '100dp'
        height: '500dp'
        pos_hint: {"top": .5}


    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'
        Button:
            text: 'B5'

    Label:
        text: 'C'


<MainWidget>:
    Button:
        text: "Milan"
        size: '100dp','80dp'
